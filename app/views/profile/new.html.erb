<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>プロフィール作成</h2>
      <%= form_with(url: create_profile_path, model: @profile, local: true, method: :post) do |f| %>

        <% if @profile.errors.any? %>
          <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group row mb-1">
          <label class="col-md-2">氏名</label>
          <div class="col-md-10">
              <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-1">
          <label class="col-md-2">性別</label>
          <div class="col-md-10">
            <%= f.text_field :gender, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-1">
          <label class="col-md-2">趣味</label>
          <div class="col-md-10">
            <%= f.text_field :hobby, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-1">
          <label class="col-md-2">自己紹介欄</label>
          <div class="col-md-10">
            <%= f.text_area :introduction, rows: 20, class: "form-control" %>
          </div>
        </div>
        <div class="d-flex justify-content-end mb-1">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
