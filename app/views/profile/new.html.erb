<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">プロフィール登録</h2>
      <%= form_with(url: create_profile_path, model: @profile, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>

        <% if @profile.errors.any? %>
          <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> </ul>
        <% end %>

        <div class="form-group">
          <%= f.label "氏名", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "性別", class: 'form-label' %>
          <%= f.text_field :gender, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "趣味", class: 'form-label' %>
          <%= f.text_field :hobby, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "自己紹介欄", class: 'form-label' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="button-group">
          <%= f.submit '登録', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
